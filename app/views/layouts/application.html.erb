    .text-primary{
        color: white !important;
    }

    /* === Tablas oscuras === */
    .table {
        background-color: #1E1E1E !important;
        color: #E0E0E0 !important;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 12px;
        overflow: hidden;
    }

    .table thead {
        background-color: #2E2E2E !important;
        color: #08A6FE !important;
    }

    .table td, .table th {
        border-top: 1px solid #2E2E2E !important;
    }

    .table td .btn {
        background-color: #2E2E2E;
        color: #E0E0E0;
    }

    .table td .btn:hover {
        background-color: #3a3a3a;
    }


    .table-hover tbody tr:hover {
        background-color: #2a2a2a !important;
    }

    .table .text-dark {
        color: #E0E0E0 !important;
    }

    .bg-light {
        background-color: #1E1E1E !important;
        color: #E0E0E0 !important;
    }

    .text-secondary {
        color: #aaa !important;
    }

    /* === Scoreboard oscuro === */

    .scoreboard {
        background-color: #1E1E1E !important;
        color: #E0E0E0 !important;
        border-radius: 12px;
        box-shadow: 0 8px 15px rgba(0,0,0,0.7);
    }

    .scoreboard .score {
        color: #08A6FE !important;
    }

    .scoreboard .team {
        color: #E0E0E0 !important;
    }

    .scoreboard .match-info small {
        color: #ccc !important;
    }

    .pagination {
        justify-content: center;
        margin-top: 2rem;
    }

    .pagination .page-item {
        background-color: transparent;
    }

    .pagination .page-link {
        background-color: #2E2E2E; /* gris oscuro */
        border: 1px solid #444;
        color: #E0E0E0;
        font-weight: bold;
        transition: all 0.2s ease-in-out;
    }

    .pagination .page-link:hover {
        background-color: #08A6FE;
        color: #121212;
        border-color: #08A6FE;
    }

    .pagination .page-item.active .page-link {
        background-color: #08A6FE;
        color: #121212;
        border-color: #08A6FE;
    }

    .pagination .page-item.disabled .page-link {
        background-color: #1E1E1E;
        color: #888;
        border-color: #333;
        pointer-events: none;
        opacity: 0.7;
    }

    .profile-header-card {
        background-color: #1E1E1E !important;
        border-left: 4px solid #08A6FE;
        border-radius: 16px;
    }

    .border-primary {
        border-color: #08A6FE !important;
    }

    .gold-border {
        border: 3px solid #ffd700 !important;
        border-radius: 8px;
    }

    .silver-border {
        border: 3px solid #c0c0c0 !important;
        border-radius: 8px;
    }

    .bronze-border {
        border: 3px solid #cd7f32 !important;
        border-radius: 8px;
    }

    .alert-success{
        background-color: #08A6FE !important;
        color: white !important;
        border-color: #06a0f8 !important;
    }

    .navbar-toggler-icon {
        background-color: #08a6fe;
    }

    .border-bottom {
        border-color: #08a6fe !important;
    }

    /* Nota discreta sin fondo amarillo */
    .note-muted {
        border: 1px dashed rgba(255, 193, 7, .35); /* warning soft */
        color: rgba(255, 255, 255, .8);
        background: rgba(0,0,0,.15);
        border-radius: .5rem;
        padding: .5rem .75rem;
        font-size: .875rem;
    }
    /* Detalle hover leve en la tarjeta dorada */
    .card-gold:hover {
        border-color: rgba(255, 193, 7, .9);
        box-shadow: 0 0 0 .15rem rgba(255,193,7,.15);
        transform: translateY(-2px);
        transition: all .15s ease;
    }
    .chip {
        display: inline-flex;
        align-items: center;
        gap: .35rem;
        padding: .2rem .5rem;
        border-radius: 999px;
        color: #ffc107;
        font-size: .75rem;
        font-weight: 600;
    }

    .winner-card { background: rgba(255,255,255,0.03); border: 1px solid rgba(255,193,7,.4); border-radius: 1rem; padding: .75rem; display: flex; align-items: center; gap: .75rem; transition: transform .15s ease, box-shadow .15s ease; }
    .winner-card:hover { transform: translateY(-2px); box-shadow: 0 4px 16px rgba(255,193,7,0.15); }
    .medal { font-size: 1.5rem; width: 2rem; text-align: center; }
    .avatar { flex-shrink: 0; width: 48px; height: 48px; border-radius: 50%; border: 3px solid #ffc107; object-fit: cover; }
    .winner-info { flex-grow: 1; }
    .winner-name { font-weight: 600; font-size: .95rem; margin-bottom: .15rem; }
    .winner-meta { font-size: .8rem; color: #adb5bd; }

    .team-card .team-list {
        max-height: 440px;      /* hace la tarjeta más compacta */
        overflow-y: auto;
    }
    @media (max-width: 576px) { .team-card .team-list { max-height: none; } }

    /* Suaviza barras en modo oscuro */
    .progress { background-color: #dc3545; }
    .progress-bar { background-color: #28a745  }

    .mvp-badge {
        position: absolute;
        bottom: -4px; right: -4px;
        background: #ffc107;
        color: #000;
        border-radius: 999px;
        width: 28px; height: 28px;
        display: inline-flex; align-items: center; justify-content: center;
        border: 2px solid #212529;
    }
    .stat-chip {
        display: inline-flex; align-items: center;
        gap: .25rem;
        font-size: .85rem;
        background: rgba(255,255,255,.07);
        border: 1px solid rgba(255,255,255,.12);
        padding: .25rem .5rem; border-radius: 999px;
    }

    /* Summary compact score */
    .result-compact .team-name{
        font-weight: 700;
        max-width: 11rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    @media (max-width: 576px){
        .result-compact .team-name{ max-width: 7.5rem; }
    }

    .score-pill{
        display: inline-flex;
        align-items: center;
        gap: .25rem;
        padding: .15rem .6rem;
        border-radius: .75rem;
        border: 1px solid #06a0f8;                 /* azul del tema */
        background: rgba(8,166,254,.10);
        font-weight: 800;
        letter-spacing: .5px;
    }

    .score-pill .score-num{
        color: #08A6FE;                             /* azul del tema */
        font-size: 1.1rem;                          /* más compacto que antes */
        line-height: 1;
    }

    .result-compact .meta{
        opacity: .9;
    }
</style>
</body>
</html>

<h1>Detalles del Partido</h1>
<p><strong>Fecha:</strong> <%= @match.date %></p>
<p><strong>Ubicación:</strong> <%= @match.location %></p>
<p><strong>Resultado:</strong>
  <% if @match.result.present? %>
    <td><%= @match.result %></td>
  <% else %>
    <td>
      <% if user_signed_in? %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addResultModal-<%= @match.id %>">
          Agregar resultado
        </button>
      <% else %>
        Resultado no subido
      <% end %>
    </td>
  <% end %>
</p>

<div class="modal fade" id="addResultModal-<%= @match.id %>" tabindex="-1" aria-labelledby="addResultModalLabel-<%= @match.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addResultModalLabel-<%= @match.id %>">Agregar Resultado</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @match, url: match_path(@match), method: :patch, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :result, "Resultado" %>
            <%= f.text_field :result, class: "form-control", placeholder: "Ejemplo: 3-1" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <%= f.submit "Guardar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h2>Participaciones</h2>
<%= link_to 'Añadir Participación', new_match_participation_path(@match), class: 'btn btn-primary mb-3' %>

<div class="row">
  <% @teams.each do |team| %>
    <div class="col-lg-6 col-12 mb-4">
      <h3>Equipo: <%= team.name %> ( <%= @participations.where(team: team).count %> )</h3>
      <table class="table">
        <thead>
        <tr>
          <th>Jugador</th>
          <th>Goles</th>
          <th>Asistencias</th>
          <th>Calificación</th>
          <% if user_signed_in? %>
            <th>Acciones</th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% @participations.where(team: team).each do |participation| %>
          <tr>
            <td><%= link_to player_path(participation.player) do %><%= participation.player.full_name %><% end %></td>
            <td><%= participation.goals %></td>
            <td><%= participation.assists %></td>
            <td><%= participation.rating %></td>
            <% if user_signed_in? %>
              <td>
                <%= link_to 'Editar', edit_match_participation_path(@match, participation), class: 'btn btn-warning' %>
                <%= button_to 'Eliminar', match_participation_path(@match, participation), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
              </td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

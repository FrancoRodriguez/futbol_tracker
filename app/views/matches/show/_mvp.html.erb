<section class="mb-5 px-3 px-md-5">
  <h3 class="mb-4 fw-bold text-center text-warning"><i class="fas fa-star"></i> Jugador MVP</h3>
  <% if match.mvp.present? %>
    <div class="d-flex justify-content-center">
      <div class="card card-gold shadow-lg p-4 rounded bg-dark text-light" style="max-width: 600px; width: 100%;">
        <div class="d-flex align-items-center gap-4">
          <% if match.mvp.profile_photo.attached? %>
            <%= image_tag match.mvp.profile_photo,
                          class: "rounded-circle border border-warning",
                          style: "width: 100px; height: 100px; object-fit: cover;" %>
          <% else %>
            <%= image_tag "default_avatar.png",
                          class: "rounded-circle border border-warning",
                          width: 100, height: 100 %>
          <% end %>
          <div>
            <h4 class="fw-bold mb-1"><%= match.mvp.full_name %></h4>
            <p class="mb-1 fs-6">Destacado como MVP en este partido</p>
            <%= link_to "Ver perfil", player_path(match.mvp), class: "btn btn-warning btn-sm mt-2" %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <% if user_signed_in? %>
      <div class="card shadow-lg mb-4">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="mb-0">Seleccionar MVP</h2>
        </div>
        <div class="card-body bg-light">
          <%= form_with(model: @match, url: match_path(@match), method: :patch, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :mvp_id, "Jugador MVP", class: "form-label fw-bold" %>
              <%= f.collection_select :mvp_id, @available_players_mvp, :id, :name,
                                      { prompt: "Selecciona un jugador" },
                                      { class: "form-select shadow-sm" } %>
            </div>
            <div class="text-center">
              <%= f.submit "Guardar MVP", class: "btn btn-primary btn-lg px-5 mt-3 shadow-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="text-center fst-italic text-muted">MVP no disponible.</p>
    <% end %>
  <% end %>
</section>

<section>
  <h3 class="mb-4 fw-bold text-center text-light">
    <i class="fas fa-users"></i> Equipos y Jugadores
  </h3>

  <div class="row g-4">
    <% teams.each do |team| %>
      <% team_players = participations.where(team: team).includes(:player) %>
      <% team_pct     = @team_win_percentages[team.id] %>
      <% featured     = @featured_by_team[team.id] %>

      <div class="col-12 col-lg-6">
        <div class="card shadow-lg rounded p-3 h-100 bg-dark text-light">
          <div class="card-header bg-transparent border-0 text-center pt-4">
            <h4 class="fw-bold mb-1">Equipo <%= team.name %></h4>

            <%# Probabilidad de victoria: solo si fue calculada (hay jugadores elegibles con >= MIN_MATCHES) %>
            <% if team_pct.present? %>
              <p class="text-muted mb-0">
                Probabilidad de victoria:
                <span class="fw-semibold <%= team_pct.to_f >= 50 ? 'text-success' : 'text-warning' %>">
                  <%= "#{team_pct}%" %>
                </span>
                · <%= pluralize(team_players.count, 'jugador inscripto', 'jugadores inscriptos') %>
              </p>
            <% else %>
              <p class="text-muted mb-0">
                Probabilidad de victoria: <span class="fw-semibold text-secondary">Sin datos</span>
                <small class="ms-1">(requiere mínimo <%= Player::MIN_MATCHES %> PJ elegibles)</small>
                · <%= pluralize(team_players.count, 'jugador inscripto', 'jugadores inscriptos') %>
              </p>
            <% end %>
          </div>

          <div class="list-group list-group-flush team-list">
            <% team_players
                 .order('players.rating DESC') # orden visible por rating
                 .each do |participation| %>
              <% player      = participation.player %>
              <% is_featured = (featured && featured.id == player.id) %>
              <% wr_pct      = @win_rate_pct_by_player[player.id] %> <%# nil si < MIN_MATCHES %>

              <div class="list-group-item bg-dark text-light border-primary d-flex align-items-center gap-3 <%= is_featured ? 'featured-glow' : '' %>">
                <%# Avatar %>
                <% if player.profile_photo.attached? %>
                  <%= image_tag player.profile_photo, class: "rounded-circle border border-warning flex-shrink-0",
                                style: "width: 48px; height: 48px; object-fit: cover;" %>
                <% else %>
                  <%= image_tag "default_avatar.png", class: "rounded-circle border border-warning flex-shrink-0",
                                width: 48, height: 48 %>
                <% end %>

                <div class="flex-grow-1">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                      <%= link_to player.full_name, player_path(player), class: "fw-semibold text-decoration-none text-light" %>
                      <% if is_featured %>
                        <span class="badge bg-warning text-dark fw-bold">Destacado</span>
                      <% end %>
                    </div>

                    <%# Texto de victorias/WR visible, explícito con mínimo %>
                    <small class="text-muted">
                      <% if wr_pct.present? %>
                        Victorias <span class="text-light fw-semibold"><%= wr_pct %>%</span>
                      <% else %>
                        <small class="text-muted">5 PJ y hablamos</small>
                    <% end %>
                    </small>
                  </div>

                  <%# Barra solo si hay WR válido (cumple mínimo) %>
                  <% if wr_pct.present? %>
                    <div class="progress mt-2" style="height:6px;">
                      <div class="progress-bar" role="progressbar"
                           style="width:<%= wr_pct %>%;" aria-valuenow="<%= wr_pct.to_i %>"
                           aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  <% end %>
                </div>

                <div class="ms-2 d-none d-sm-flex">
                  <% if match.date > 3.days.ago || user_signed_in? %>
                    <button type="button" class="btn btn-outline-warning btn-sm me-2"
                            data-bs-toggle="modal" data-bs-target="#editParticipationModal-<%= participation.id %>">
                      <i class="fas fa-edit"></i>
                    </button>
                  <% end %>
                  <% if user_signed_in? %>
                    <%= button_to 'Eliminar', match_participation_path(match, participation),
                                  method: :delete, data: { confirm: '¿Estás seguro?' },
                                  class: 'btn btn-outline-danger btn-sm' %>
                  <% end %>
                </div>
              </div>

              <!-- Modal editar -->
              <div class="modal fade" id="editParticipationModal-<%= participation.id %>"
                   aria-labelledby="editParticipationModalLabel-<%= participation.id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                  <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                      <h5 class="modal-title" id="editParticipationModalLabel-<%= participation.id %>">
                        Editar Participación de <b><%= player.full_name %></b>
                      </h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                      <%= form_with(model: [match, participation], url: match_participation_path(match, participation),
                                    method: :patch, local: true) do |f| %>
                        <div class="mb-3">
                          <%= f.label :team_id, 'Equipo', class: "form-label" %>
                          <%= f.collection_select :team_id, Team.all, :id, :name,
                                                  { selected: participation.team_id, prompt: 'Selecciona un equipo' },
                                                  { class: 'form-select' } %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                          <%= f.submit 'Guardar cambios', class: 'btn btn-primary',
                                       onclick: 'setTimeout(() => { location.reload(); }, 2000);' %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

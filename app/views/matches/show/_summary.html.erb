<section class="card-primary d-flex justify-content-between align-items-center mb-4 px-4 py-3 shadow-sm rounded bg-light" style="min-height: 70px;">

  <!-- Fecha y Lugar -->
  <div class="d-flex align-items-center text-primary" style="font-size: 1rem; font-weight: 600; min-width: 220px;">
    <i class="fas fa-calendar-alt me-3 fs-5"></i>
    <div>
      <div><%= date_in_spanish(match.date) %></div>
      <small class="text-muted">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= match.location.presence || "Ubicaci처n no disponible" %>
      </small>
    </div>
  </div>

  <!-- Resultado -->
  <div class="text-success fw-bold fs-4 d-flex align-items-center justify-content-center flex-grow-1">
    <% if match.result.present? %>
      <%= render "result", match: match %>
    <% else %>
      <% if user_signed_in? %>
        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addResultModal-<%= match.id %>">
          Agregar resultado
        </button>
      <% else %>
        <span class="fst-italic text-muted fs-5">Resultado no disponible</span>
      <% end %>
    <% end %>
  </div>

  <!-- Clima -->
  <% if @match_weather.present? %>
    <div class="d-flex align-items-center text-secondary" style="min-width: 180px; font-size: 0.9rem;">
      <%= image_tag("https://openweathermap.org/img/wn/#{@match_weather[:icon]}@2x.png", alt: "Clima", width: 40, height: 40, class: "me-2") %>
      <div>
        <div class="fw-semibold text-primary"><%= @match_weather[:weather] %></div>
        <div><%= @match_weather[:temp] %>째C (sensaci처n <%= @match_weather[:feels_like] %>째C)</div>
      </div>
    </div>
  <% else %>
    <div class="text-muted fst-italic" style="min-width: 180px; font-size: 0.9rem; text-align: center;">
      Clima no disponible
    </div>
  <% end %>

</section>

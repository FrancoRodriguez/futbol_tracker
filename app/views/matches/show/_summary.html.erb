<section class="card-primary d-flex justify-content-between align-items-center mb-4 px-4 py-3 shadow-sm rounded bg-light" style="min-height: 70px;">
  <!-- Fecha y Lugar -->
  <div class="d-flex align-items-center text-primary" style="font-size: 1rem; font-weight: 600;">
    <i class="fas fa-calendar-alt me-3 fs-5"></i>
    <div>
      <div><%= date_in_spanish(match.date) %></div>
      <small class="text-muted">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= match.location.presence || "UbicaciÃ³n no disponible" %>
      </small>
    </div>
  </div>

  <!-- Resultado -->
  <div class="text-success fw-bold fs-4 d-flex align-items-center">
    <% if match.result.present? %>
      <%= render "result", match: match %>
    <% else %>
      <% if user_signed_in? %>
        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addResultModal-<%= match.id %>">
          Agregar resultado
        </button>
      <% else %>
        <span class="fst-italic text-muted fs-5">Resultado no disponible</span>
      <% end %>
    <% end %>
  </div>
</section>

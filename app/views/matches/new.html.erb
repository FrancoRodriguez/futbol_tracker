<h1 class="text-center mb-4">Nuevo Partido</h1>

<div class="shadow-lg p-4 rounded bg-light">
  <%= form_with(model: @match, local: true) do |f| %>
    <% if @match.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@match.errors.count, "error") %> impidió crear el partido:</h2>
        <ul>
          <% @match.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :location, "Ubicación del partido" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :date, "Fecha del partido" %>
        <%= f.datetime_local_field :date, class: "form-control" %>
      </div>
    </div>

    <div class="text-center">
      <%= f.submit "Guardar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", matches_path, class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>

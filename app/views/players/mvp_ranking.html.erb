<h1 class="text-center mb-4">üèÜ Ranking de MVPs üèÜ</h1>
<div class="container text-center">
  <div class="row justify-content-center">
    <div class="table-responsive shadow-lg rounded bg-light col col-8">
      <table class="table table-hover align-middle">
        <thead class="table-dark text-center">
        <tr>
          <th class="index-column">Posici√≥n</th>
          <th>Jugador</th>
          <th>Veces MVP</th>
        </tr>
        </thead>
        <tbody>
        <% @players.each_with_index do |player, index| %>
          <tr class="<%= 'top-scorer' if index < 3 %>">
            <td class="text-center">
              <% if index == 0 %>
                <span class="badge bg-gold text-dark p-2"><%= index + 1 %></span>
              <% elsif index == 1 %>
                <span class="badge bg-silver text-dark p-2"><%= index + 1 %></span>
              <% elsif index == 2 %>
                <span class="badge bg-bronze text-dark p-2"><%= index + 1 %></span>
              <% else %>
                <span class="badge bg-secondary p-2"><%= index + 1 %></span>
              <% end %>
            </td>
            <td class="text-center">
              <%= link_to player.name, player_path(player), class: "text-decoration-none text-dark" %>
            </td>
            <td class="text-center text-success"><%= player.mvp_matches.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

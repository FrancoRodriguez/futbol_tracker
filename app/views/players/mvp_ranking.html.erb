    </thead>
    <tbody class="table-dark">
    <% @players.each_with_index do |player, index| %>
      <% border_class = case index
                        when 0 then 'gold-border'
                        when 1 then 'silver-border'
                        when 2 then 'bronze-border'
                        else ''
                        end %>

      <tr class="bg-dark text-light <%= border_class %>">

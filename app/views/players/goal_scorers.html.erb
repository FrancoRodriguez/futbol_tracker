<h1 class="text-center mb-4">🏆 Tabla de Goleadores 🏆</h1>
<div class="table-responsive shadow-lg rounded bg-light">
  <table class="table table-hover align-middle">
    <thead class="table-dark text-center">
    <tr>
      <th class="index-column">#</th>
      <th>Jugador</th>
      <th>Goles</th>
    </tr>
    </thead>
    <tbody>
    <% @goal_scorers.each_with_index do |goal_scorer, index| %>
      <tr class="<%= 'top-scorer' if index < 3 %>">
        <td class="text-center">
          <% if index == 0 %>
            <span class="badge bg-gold text-dark p-2"><%= index + 1 %></span>
          <% elsif index == 1 %>
            <span class="badge bg-silver text-dark p-2"><%= index + 1 %></span>
          <% elsif index == 2 %>
            <span class="badge bg-bronze text-dark p-2"><%= index + 1 %></span>
          <% else %>
            <span class="badge bg-secondary p-2"><%= index + 1 %></span>
          <% end %>
        </td>
        <td class="text-center">
          <%= link_to goal_scorer.player.name, player_path(goal_scorer.player), class: "text-decoration-none text-dark" %>
        </td>
        <td class="text-center text-success fw-bold"><%= goal_scorer.total_goals %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
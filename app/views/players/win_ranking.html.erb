<h1 class="text-center mb-4">🏆 Ranking de Victorias 🏆</h1>
<div class="container text-center">
  <div class="row justify-content-center">
    <div class="table-responsive shadow-lg rounded bg-light col-12 col-lg-8">
    <table class="table table-hover align-middle">
        <thead class="table-dark text-center">
        <tr>
          <th class="index-column">Posición</th>
          <th>Jugador</th>
          <th>Promedio de Victorias</th>
          <th>Victorias</th>
          <th>Derrotas</th>
        </tr>
        </thead>
        <tbody>
        <% @top_players.each_with_index do |player, index| %>
          <tr class="<%= 'top-scorer' if index < 3 %>">
            <td class="text-center"><%= render "tables/top_three", index: %></td>
            <td class="text-center">
              <%= link_to player.name, player_path(player), class: "text-decoration-none text-dark" %>
            </td>
            <td class="text-center text-success">
              <%= player.win_diff %>
            </td>
            <td class="text-center text-success"><%= player.total_wins %></td>
            <td class="text-center text-danger"><%= player.total_losses %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

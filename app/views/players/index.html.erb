<h1>Jugadores</h1>

<%= link_to 'Nuevo Jugador', new_player_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
  <tr>
    <th>Nombre</th>
    <th class="text-center">Apodo</th>
    <th class="text-center">Contacto</th>
    <th class="text-center">WhatsApp</th>
    <th class="text-center">Partidos jugados</th>
    <th><i class="fas fa-futbol"></i></th>
    <th><i class="fas fa-shoe-prints"></i></th>
    <th><i class="fas fa-star"></i></th>
    <% if user_signed_in? %>
      <th>Acciones</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @players.each do |player| %>
    <tr>
        <td><%= link_to player_path(player) do %><%= player.name %><% end %></td>
        <td class="text-center"><%= player.nickname %></td>
        <td class="text-center"><%= player.contact_info %></td>
        <td class="text-center">
          <% if player.contact_info.present? %>
            <%= link_to 'WhatsApp', "https://wa.me/#{player.contact_info.gsub(/\D/, '')}", target: "_blank", class: "btn btn-success" %>
          <% else %>
            <span>No disponible</span>
          <% end %>
        </td>
        <td class="text-center"><%= player.participations.count %></td>
        <td><%= player.participations.sum(:goals) %></td>
        <td><%= player.participations.sum(:assists) %></td>
        <td><%= player.rating %></td>
      <td>
        <% if user_signed_in? %>
          <%= link_to 'Editar', edit_player_path(player), class: "btn btn-warning" %>
          <%= button_to 'Eliminar', player_path(player), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

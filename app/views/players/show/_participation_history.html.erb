<% if @participations.any? %>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">
        <i class="fas fa-history me-2"></i>Historial de Participaciones
      </h5>

      <div class="table-responsive">
        <table class="table table-hover align-middle text-center table-dark table-sm mb-0">
          <thead class="table-secondary text-dark">
          <tr>
            <th class="text-start"><i class="fas fa-calendar-alt me-1"></i>Fecha</th>
            <th><i class="fas fa-users me-1"></i>Equipo</th>
            <th><i class="fas fa-star me-1"></i>Resultado</th>
            <th><i class="fas fa-eye me-1"></i>Ver</th>
          </tr>
          </thead>
          <tbody>
          <% @participations.each do |participation| %>
            <% match = participation.match %>
            <tr>
              <td class="text-start"><%= l(match.date, format: :short) %></td>
              <td><%= participation.team.name %></td>
              <td><%= render "matches/result", match: match %></td>
              <td>
                <%= link_to match_path(match), class: "btn btn-sm btn-outline-light", title: "Ver Partido" do %>
                  <i class="fas fa-arrow-right"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= paginate @participations %>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning text-center">
    Este jugador aún no ha participado en ningún partido.
  </div>
<% end %>

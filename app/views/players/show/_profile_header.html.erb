<% if @player %>
  <div class="card mb-5 shadow-sm profile-header-card">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start">
      <!-- Foto + nombre + contacto -->
      <div class="d-flex flex-column flex-md-row align-items-center text-center text-md-start">
        <!-- Foto -->
        <div class="me-md-4 mb-3 mb-md-0">
          <% if @player.profile_photo.attached? %>
            <%= image_tag @player.profile_photo, alt: @player.full_name,
                          class: "rounded-circle border border-3 border-primary shadow",
                          style: "object-fit: cover; width: 120px; height: 120px;" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "rounded-circle border border-3 border-secondary", width: 120, height: 120 %>
          <% end %>
        </div>

        <!-- Nombre y contacto -->
        <div>
          <h2 class="mb-1 text-light fw-bold"><%= @player.full_name %></h2>
          <% if @player.contact_info.present? %>
            <div class="d-flex flex-column flex-md-row align-items-center gap-2 mb-2">
              <div class="text-muted">
                <i class="fas fa-phone-alt text-success me-2"></i>
                <%= @player.contact_info %>
              </div>

              <%= link_to "https://wa.me/#{@player.contact_info.gsub(/\D/, '')}", target: "_blank", rel: "noopener", class: "btn btn-outline-success btn-sm d-flex align-items-center" do %>
                <i class="fab fa-whatsapp me-2"></i> WhatsApp
              <% end %>
            </div>
          <% end %>

          <% last_match = @player.participations.joins(:match).order('matches.date DESC').first&.match %>
          <% if last_match %>
            <p class="text-muted mb-0">
              <i class="fas fa-clock me-1"></i>
              √öltimo partido: <%= date_in_spanish(last_match.date) %>
            </p>
          <% end %>

        </div>
      </div>

      <!-- Panel de porcentaje / pretemporada -->
      <% min_pj   = Player::MIN_MATCHES %>
      <% jugados  = @stat.total_matches %>
      <% faltan   = [min_pj - jugados, 0].max %>
      <% progreso = ((jugados.to_f / min_pj) * 100).clamp(0, 100).round %>

      <div class="text-center mt-4 mt-md-0" style="min-width:270px;">
        <% if jugados < min_pj %>
          <!-- MODO PRETEMPORADA -->
          <div class="bg-light text-secondary rounded-4 px-4 py-3 shadow-sm border border-warning text-start">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <h6 class="fw-bold mb-0">
                <span class="me-1">üèãÔ∏è</span> Modo Pretemporada
              </h6>
              <span class="badge bg-warning text-dark">Requiere <%= min_pj %> PJ</span>
            </div>

            <p class="mb-2 small">
              Sin <strong><%= min_pj %></strong> partidos, <em>no hay gloria</em> ‚Äî pero vas <strong><%= jugados %>/<%= min_pj %></strong>.
              <span class="d-none d-md-inline">Juega <strong><%= faltan %></strong> m√°s para <u>desbloquear</u> tus estad√≠sticas. üòâ</span>
            </p>

            <div class="progress" style="height:8px;">
              <div class="progress-bar progress-bar-striped progress-bar-animated"
                   role="progressbar"
                   style="width:<%= progreso %>%;" aria-valuenow="<%= progreso %>"
                   aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>

            <div class="d-flex justify-content-between mt-1">
              <small class="text-muted">0</small>
              <small class="text-muted"><%= min_pj %> PJ</small>
            </div>

            <div class="mt-2">
              <small class="text-secondary">
                <i class="fas fa-lock me-1"></i>Las m√©tricas se activan al alcanzar <%= min_pj %> partidos.
              </small>
            </div>
          </div>
        <% else %>
          <!-- WR DISPONIBLE -->
          <div class="bg-dark text-light rounded-pill px-4 py-3 shadow-sm border border-primary text-start">
            <h5 class="fw-bold mb-1 mb-0 d-flex align-items-center">
              <i class="fas fa-trophy text-warning me-2"></i>
              <%= (@stat.win_rate_pct || 0) %>%
            </h5>
            <small class="text-muted">Porcentaje de victorias</small>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

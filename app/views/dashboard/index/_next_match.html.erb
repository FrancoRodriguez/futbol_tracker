<% if @next_match.present? %>
  <div class="card card-primary rounded-4 shadow-sm border-0 p-4">
    <div class="text-center mb-4">
      <i class="fas fa-futbol fa-2x text-success"></i>
    </div>

    <h3 class="text-center fw-bold mb-4">Próximo Partido</h3>

    <div class="d-flex justify-content-between align-items-center mb-3 px-3 py-2 bg-light rounded-3">
      <div class="d-flex align-items-center">
        <i class="fas fa-map-marker-alt text-danger fs-4 me-2"></i>
        <div>
          <small class="text-muted d-block mb-1">Ubicación</small>
          <strong style="font-size: 1rem;">
            <%= @next_match.location.presence || 'No especificada' %>
          </strong>
        </div>
      </div>

      <div class="d-flex align-items-center">
        <i class="fas fa-calendar-day fs-4 me-2"></i>
        <div>
          <small class="text-muted d-block mb-1">Fecha</small>
          <strong style="font-size: 1rem;"><%= date_in_spanish(@next_match.date) %></strong>
        </div>
      </div>
    </div>

    <% if @next_match_weather.present? %>
      <div class="card card-gold border-warning rounded-3 shadow-sm p-3 text-center mb-4" style="background: #e9f7ff;">
        <%= image_tag("https://openweathermap.org/img/wn/#{@next_match_weather[:icon]}@2x.png", alt: "Clima", width: 60, height: 60, class: "mx-auto mb-2") %>
        <h5 class="fw-semibold mb-1" style="color: #0077cc;"><%= @next_match_weather[:weather] %></h5>
        <p class="mb-1" style="font-size: 1rem;">
          <%= @next_match_weather[:temp] %>°C (sensación <%= @next_match_weather[:feels_like] %>°C)
        </p>
        <p class="mb-0 text-muted" style="font-size: 0.875rem;">
          Humedad: <%= @next_match_weather[:humidity] %> • Nubes: <%= @next_match_weather[:clouds] %> • Lluvia: <%= @next_match_weather[:rain_chance] %>
        </p>
        <small class="text-muted d-block mt-2">Pronóstico para las <%= @next_match_weather[:forecast_time] %> h</small>
      </div>
    <% else %>
      <p class="text-center fst-italic text-muted mb-4">No se pudo obtener el pronóstico del clima.</p>
    <% end %>

    <%= link_to 'Ver detalles del partido', match_path(@next_match), class: 'btn btn-outline-primary w-100 fw-bold py-2' %>
  </div>

<% else %>
  <div class="card rounded-4 shadow-sm border-0 p-5" style="max-width: 360px; margin: auto; background: #fff; text-align: center;">
    <i class="fas fa-calendar-times fa-5x text-secondary mb-4"></i>
    <h3 class="fw-semibold text-secondary mb-3">Próximo Partido</h3>
    <p class="text-muted fs-5">No hay partidos programados por ahora.</p>
  </div>
<% end %>

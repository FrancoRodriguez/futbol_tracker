<div class="row">
  <div class="col-md-4 mb-3">
    <div class="card card-stats shadow-sm border-0 h-100">
      <div class="card-body">
        <i class="fas fa-trophy fa-2x text-success mb-3"></i>
        <h5 class="card-title mb-4 text-center">Top Ganadores</h5>

        <% @top_winners.each_with_index do |player, i| %>
          <%= link_to player_path(player), class: "text-decoration-none" do %>
            <div class="d-flex align-items-center justify-content-start mb-3 pb-2 border-bottom">
              <div class="me-3 fs-3">
                <%= ["🥇", "🥈", "🥉"][i] %>
              </div>

              <% if player.profile_photo.attached? %>
                <%= image_tag player.profile_photo,
                              class: "rounded-circle me-3 border border-warning",
                              style: "width: 50px; height: 50px; object-fit: cover;" %>
              <% else %>
                <%= image_tag "default_avatar.png",
                              class: "rounded-circle me-3 border border-warning",
                              width: 50, height: 50 %>
              <% end %>

              <div>
                <div class="fw-bold mb-0"><%= player.full_name %></div>
                <div class="text-muted small">
                  +<%= player.win_diff %> victoria<%= 's' unless player.win_diff == 1 %> de diferencia
                </div>
                <div class="text-muted small">
                  <i class="fas fa-futbol me-1"></i>
                  <%= pluralize(player.total_matches, "partido") %> jugado<%= 's' unless player.total_matches == 1 %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-3">
    <%= link_to player_path(@top_mvp), class: "text-decoration-none text-dark" do %>
      <div class="card card-stats shadow-sm border-0 h-100">
        <div class="card-body text-center">
          <i class="fas fa-star fa-2x text-warning mb-2"></i>
          <h5 class="card-title mb-4">MVP Más Frecuente</h5>

          <% if @top_mvp.profile_photo.attached? %>
            <%= image_tag @top_mvp.profile_photo,
                          class: "rounded-circle border border-warning mb-4",
                          style: "width: 100px; height: 100px; object-fit: cover;" %>
          <% else %>
            <%= image_tag "default_avatar.png",
                          class: "rounded-circle border border-warning mb-4",
                          width: 100, height: 100 %>
          <% end %>

          <p class="fw-bold"><%= @top_mvp&.full_name || "N/A" %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4 mb-3">
    <% if @next_match.present? %>
      <div class="card card-stats shadow-sm border-0 h-100">
        <div class="card-body text-center">
          <i class="fas fa-calendar-alt fa-2x mb-3"></i>
          <h5 class="card-title">Próximo Partido</h5>

          <p class="mb-2">
            <strong>📍 Ubicación:</strong><br>
            <%= @next_match.location.presence || 'No especificada' %>
          </p>

          <p class="mb-3">
            <strong>📅 Fecha:</strong><br>
            <%= date_in_spanish(@next_match.date) %>
          </p>

          <%= link_to '👀 Ver', match_path(@next_match), class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% else %>
      <div class="card card-stats shadow-sm border-0 h-100">
        <div class="card-body text-center">
          <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
          <h5 class="card-title">Próximo Partido</h5>
          <p class="text-muted mb-0">No hay partidos programados por ahora.</p>
        </div>
      </div>
    <% end %>
  </div>

</div>
